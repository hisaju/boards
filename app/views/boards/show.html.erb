<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-md p-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @board.title %></h1>
    <div class="text-gray-600 mb-6 whitespace-pre-wrap"><%= @board.content %></div>
    
    <div class="flex justify-end space-x-4">
      <%= link_to '編集', edit_board_path(@board), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to '削除', board_path(@board), 
          data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' },
          class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to '一覧に戻る', boards_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>