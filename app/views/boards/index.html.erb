<div class="min-h-screen bg-gray-100">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">ボード一覧</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @boards.each do |board| %>
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
          <%= link_to board_path(board), class: "block p-6" do %>
            <%= image_tag board.image.url, class: "w-full h-48 object-cover object-center mb-4" %>
            <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= board.title %></h2>
            <p class="text-gray-600 mb-4"><%= board.content %></p>
            <div class="flex justify-between items-center text-sm text-gray-500">
              <span>作成日: <%= board.created_at.strftime('%Y/%m/%d') %></span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-8">
      <%= link_to '新規ボード作成', new_board_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition-colors duration-300" %>
    </div>
  </div>
</div>
